{% extends 'dashboard.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.Type }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.Date ? event.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ event.Adresse }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ event.Nom }}</td>
            </tr>
            <tr>
                <th>Sponsor</th>
                <td>{{ event.Sponsor.Nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}">back to list</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
