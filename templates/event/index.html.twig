{% extends 'dashboard.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>
     <a href="{{ path('app_event_index', {'sort': 'asc'}) }}">Date (ASC)</a> |
    <a href="{{ path('app_event_index', {'sort': 'desc'}) }}">Date (DESC)</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Date</th>
                <th>Adresse</th>
                <th>Nom</th>
                <th>Sponsor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.Type }}</td>
                <td>{{ event.Date ? event.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.Adresse }}</td>
                <td>{{ event.Nom }}</td>
                <td>{{ event.Sponsor.Nom }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Create new</a>
{% endblock %}
